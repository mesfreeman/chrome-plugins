{
    "manifest_version": 2,
    "name": "天气预报",
    "version": "1.0",
    "description": "查看未来两周的天气情况",
    "icons": {
        "16": "images/weather.png",
        "48": "images/weather.png",
        "128": "images/weather.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/weather.png",
            "38": "images/weather.png"
        },
        "default_title": "天气预报",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "http://samples.openweathermap.org/data/2.5/forecast/daily?q=*"
    ]
}